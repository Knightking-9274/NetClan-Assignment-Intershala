<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    tools:context=".ExploreAcivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/shade1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_menu_open_24"></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="7dp"
            android:text="Howdy Yash Gohil !!"
            android:textSize="18sp"
            android:textColor="@color/white"
            />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_location_on_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Bjrang Wada,Igatpuri"
                    android:textColor="@color/white"/>
            </LinearLayout>



    </LinearLayout>

        <LinearLayout
            android:layout_width="82dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="100dp"
            android:gravity="center">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_gravity="center"

                android:src="@drawable/baseline_add_circle_outline_24" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refine"
                android:textColor="@color/white"
                android:textSize="17sp"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/shade2">

        <TextView
            android:layout_width="137dp"
            android:layout_height="match_parent"
            android:id="@+id/txt1"
            android:text="Personal"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:paddingTop="15dp">

        </TextView>
        <TextView
            android:layout_width="137dp"
            android:layout_height="match_parent"
            android:id="@+id/txt2"
            android:text="Buisness"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:paddingTop="15dp">

        </TextView>
        <TextView
            android:layout_width="137dp"
            android:layout_height="match_parent"
            android:id="@+id/txt3"
            android:text="Merchant"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:paddingTop="15dp">

        </TextView>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="301dp"
        android:layout_height="29dp"
        android:layout_marginStart="20dp"
        android:hint="Search"
        android:layout_marginTop="10dp"

        android:drawableLeft="@drawable/baseline_search_24"
        android:paddingStart="30dp">

    </TextView>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_filter_list_24"
        android:layout_margin="15dp"

        ></ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="460dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="82dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:src="@drawable/baseline_remove_red_eye_24">

           </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Explore"
                android:textSize="17sp"
                android:textAlignment="center">

            </TextView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/baseline_diversity_1_24">

            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Network"
                android:textSize="17sp"
                android:textAlignment="center">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="82dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/baseline_chat_24">

            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:textSize="17sp"
                android:textAlignment="center">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="82dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/baseline_contacts_24">

            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contacts"
                android:textSize="17sp"
                android:textAlignment="center">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="82dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/baseline_group_24">

            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Groups"
                android:textSize="17sp"
                android:textAlignment="center">

            </TextView>

        </LinearLayout>



    </LinearLayout>



</LinearLayout>



